        Shape1.Color = Color.Red;
        /// Shape1.Tag = "Shape1";  
        Shape1.Image = LoadImage("tahti");
        AddCollisionHandler(Shape1, "vihu", TormaaTahteen);
        peli.Add(Shape1);
